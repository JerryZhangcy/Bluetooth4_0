<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/data_btn_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择写的特征字"/>
        <Button
            android:id="@+id/data_btn_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择订阅的服务"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <EditText
            android:id="@+id/data_edt_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1b000012292e8bfb0100363636365603391e"/>
        <Button
            android:id="@+id/data_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写出"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/data_tv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"/>
        </ScrollView>


    </LinearLayout>

</LinearLayout>